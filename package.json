{
  "name": "landscape-deploy",
  "version": "0.0.6",
  "description": "A command-line tool for executing Landscape scripts.",
  "author": "Alazhar Shamshuddin (ashamshuddin@surrey.ca)",
  "license": "ISC",
  "private": false,
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "bin": "./bin/landscape-deploy.js",
  "bugs": {
    "url": "https://github.com/CityofSurrey/landscape-deploy/issues"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "The commit subject does not match the allowed pattern!",
      "helpMessage": ""
    }
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
    },
    "ecmaFeatures": {
      "jsx": true,
      "es6": true,
      "classes": true
    },
    "root": true,
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "comma-dangle": [
        1,
        "always-multiline"
      ],
      "max-len": [
        1,
        180,
        4
      ],
      "arrow-body-style": [
        0
      ],
      "no-console": 0,
      "brace-style": 0
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityofSurrey/landscape-deploy.git"
  },
  "scripts": {
    "compile": "rm -rf bin && babel *.js --out-dir bin/ && sed -i '1 i\\#!/usr/bin/env node' bin/landscape-deploy.js",
    "prepublish": "npm run compile",
    "publish2npm": "npm run compile && publish"
  },
  "dependencies": {
    "bunyan": "^1.8.0",
    "commander": "^2.9.0",
    "node-print": "0.0.4"
  },
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-core": "^6.8.0",
    "babel-eslint": "^6.0.2",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "eslint": "^2.8.0",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-plugin-jsx-a11y": "^0.6.2",
    "eslint-plugin-react": "^4.3.0",
    "ghooks": "^1.2.1",
    "publish": "^0.6.0",
    "validate-commit-msg": "^2.6.1"
  }
}
